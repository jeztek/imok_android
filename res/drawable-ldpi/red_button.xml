<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:endColor="#FFb50000"
                android:startColor="#FFdd0000"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#FF444444" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#FFa40000"
                android:startColor="#FFcc0000"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#FFf57900" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="#FFa40000"
                android:startColor="#FFcc0000"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#FF444444" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>
